    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>AdminLTE 3 | User Profile</title>
        <!-- Tell the browser to be responsive to screen width -->
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Font Awesome -->
        <link rel="stylesheet" href="{{ asset('Admin/plugins/fontawesome-free/css/all.min.css') }}">
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('Admin/dist/css/adminlte.min.css') }}">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <!-- About Me Box -->
    </head>
    <body class="hold-transition sidebar-mini">

    <div class="page-header " style="background: url({{ asset('images/portfolio-bg.jpg') }})  ;"  >
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>List de assop</h1>
                </div><!-- .col -->
            </div><!-- .row -->
        </div><!-- .container -->
    </div><!-- .page-header -->



    <div class="wrapper">
        <!-- Profile Image -->

        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center">













                    {%   if user.image  is  null %}

                        <img class="profile-user-img img-fluid img-circle"
                             src="https://i-love-png.com/images/administrator-male_4059.png"
                             alt="User profile picture">


                    {%  elseif user.image %}
                        <img  class="profile-user-img img-fluid img-circle image-display" height="100px" width="250px" src="{{asset('upload/'~ user.image )}}"  >


                    {% endif %}


                </div>



                <h3 class="profile-username text-center" > {{ user.username }}</h3>
                <p class="profile-username text-center" > {{ user.nom }}</p>
                <p class="profile-username text-center" > {{ user.prenom }}</p>


            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!-- About Me Box -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">User Information:</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <strong><i class="fas fa-book mr-1"></i> E-mail adress :</strong>

                <p class="text-muted">
                    {{ user.email }}
                </p>



                <hr>

                <strong><i class="fas fa-map-marker-alt mr-1"></i> Phone :</strong>

                <p class="text-muted">{{ user.tel }}</p>

                <hr>

                <strong><i class="fas fa-map-marker-alt mr-1"></i> Country :</strong>

                <p class="text-muted">{{ user.pays }}</p>

                <hr>
                <strong><i class="fas fa-map-marker-alt mr-1"></i> Adress :</strong>

                <p class="text-muted">{{ user.add }}</p>

                <hr>

                <strong><i class="fas fa-map-marker-alt mr-1"></i> Domain
                    :</strong>

                <p class="text-muted">{{ user.domaine }}</p>

                <hr>



            </div>   <div class="row">
                <div class="col-12 d-flex justify-content-center mt-72">
                    <a  class="btn gradient-bg  " href="{{ path('show_ref') }}">Back to the list</a>
                    <a  class="btn gradient-bg  " href="{{ path('edit_ref' , { 'id': user.id } ) }}">Edit</a>
                    <a  class="btn gradient-bg  " href="{{ path('fos_user_change_password' , { 'id': user.id } ) }}">Change password</a>

                </div>
            </div>


            <br>
            <br>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
    </div>
    <!-- ./wrapper -->


    <!-- jQuery -->
    <script src="{{ asset('Admin/plugins/jquery/jquery.min.js') }}"></script>
    <!-- Bootstrap 4 -->
    <script src="{{ asset('Admin/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <!-- AdminLTE App -->
    <script src="{{ asset('Admin/dist/js/adminlte.min.js') }}"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="{{ asset('Admin/dist/js/demo.js') }}"></script>
    </body>
    </html>
