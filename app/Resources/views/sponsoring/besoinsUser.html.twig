        function help(produit,quantite,besoins){
                var str = $("#"+produit).val();

                $.get( produit +"/" + str + "/"+quantite+"/"+besoins+"/help",
                    function (data) {})
                    .done(function (data) {
                        alert("thx for helping us ");

                        location.reload();
                       // location.href = ;
                        console.log(data);
                    })
                    .catch(function(error){
                        console.log(error);
                });
        };
