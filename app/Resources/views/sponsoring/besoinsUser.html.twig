{% extends 'baseAsso.html.twig' %}

{% block content %}
    {#{{ dump(result) }}#}

    <h1>besoins list</h1>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>

            <th>nom produit</th>

            <th>quantite dispo</th>

            <th>nos besoins</th>

        </tr>
        </thead>
        <tbody>
        {% for besoin in besoins %}
            <tr>
                <td>{{ besoin.nomProduit }}</td>

                <td>{{ besoin.quantiteDispo }}</td>

                <td>{{ besoin.nosBesoins }}</td>
                <td>
                    <ul>



                        <input id="{{ besoin.nomProduit }}" type="text" name="help">

                            <a id="a" onclick="help('{{ besoin.nomProduit }}','{{ besoin.quantiteDispo }}','{{ besoin.nosBesoins  }}')">help</a>


                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
{% block javascripts %}
